<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <Button
        android:id="@+id/btnMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Handler.sendMessage发消息" />
    <Button
        android:id="@+id/btnMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Message.sentToTarget发消息" />
    <Button
        android:id="@+id/btnMessage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送空消息" />
    <Button
        android:id="@+id/btnMessage4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Handler.sendMessage发送延迟消息" />
    <Button
        android:id="@+id/btnMessage5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送延迟空消息" />
<TextView
        android:id="@+id/tvMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp" />
</LinearLayout>