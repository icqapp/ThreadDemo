<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AsyncTask简单下载图片" />

            <Button
                android:id="@+id/btnId2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AsyncTask进度下载图片" />

            <Button
                android:id="@+id/btnId3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handler+Message简单下载图片" />

            <Button
                android:id="@+id/btnId6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handler发送Message" />

            <Button
                android:id="@+id/btnId4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handler通过Post修改UI组件属性" />

            <Button
                android:id="@+id/btnId5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handler通过Post下载图片" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/btnId61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr1-wrong" />

            <Button
                android:id="@+id/btnId7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr1-right" />

            <Button
                android:id="@+id/btnId8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr2-wrong" />

            <Button
                android:id="@+id/btnId9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr2-right" />

            <Button
                android:id="@+id/btnId10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr3-wrong" />

            <Button
                android:id="@+id/btnId11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anr3-right" />

            <Button
                android:id="@+id/btnId12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asynctask" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>